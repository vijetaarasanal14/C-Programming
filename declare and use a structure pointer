#include <stdio.h>

struct Student {
    int roll;
    float marks;
};

int main() {
    struct Student s1;
    struct Student *ptr;

    ptr = &s1;  // assign address

    // Using pointer to fill data
    ptr->roll = 101;
    ptr->marks = 89.5;

    // Display
    printf("Roll : %d\n", ptr->roll);
    printf("Marks: %.2f\n", ptr->marks);

    return 0;
}
